<h1 align="center">All Alpha Tech Writers & Bloggers</h1>
</br>
<div align="center">
  <nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center" >
    <li class="page-item btn btn-outline-danger" style="width: 400px;">
      
      <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
        </li>
  </ul>
</nav>
</br>
</br>
<%= @users.each do |user| %>
   <ul class="listing">
   	<div class="row">
   		<div class="well col-md-4 col-md-offset-4">
   			<li>
   				<%= link_to gravatar_for(user), user_path(user) %>
   			</li>
   			<li class="article-title">
   				<%= link_to user.username, user_path(user)%>
   			</li>

   			<li><small>
   				<%= pluralize(user.articles.count, "article") if user.articles %></small></li>
      <li>
        <%= link_to "Delete this user", user_path(user), class: "btn btn-warning", 
        style: "font-size : 10px;", 
        style: "display: ruby-text;", 
        method: :delete,
        data: { confirm: "Are you sure you want to delete the user and all their articles?"} %>
      </li>


        </div>
     </div>
   </ul>

<% end %>
 <nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center" >
    <li class="page-item btn btn-outline-danger" style="width: 400px;">
      
      <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
        </li>
  </ul>
</nav>

</div>